// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  name             String
  email            String
  password         String
  role             userRoleType
  contactNo        String
  address          String
  profileImg       String
  reviewAndRatings ReviewAndRating[]
  orders           Order[]

  @@map("users")
}



enum userRoleType {
  admin
  customer
}

enum orderStatus {
  pending
  shipped
  delivered
}
